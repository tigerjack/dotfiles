# History settings
export HISTSIZE=100000
export SAVEHIST=100000
export HISTFILE=~/.zsh_eternal_history
setopt append_history
setopt share_history
setopt hist_ignore_dups
setopt hist_ignore_space
setopt hist_verify

# Enable extended globbing
setopt extendedglob

